<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:weightSum="1"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="0dp">

            <ImageButton
                android:id="@+id/bttHome"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.20"
                android:background="@color/colorPrimary"
                app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

            <TextView
                android:id="@+id/usuario"
                android:layout_width="27dp"
                android:layout_height="match_parent"
                android:layout_weight="0.36"
                android:background="@color/colorPrimary"
                android:text="Usuario:" />

            <TextView
                android:id="@+id/puntaje"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.28"
                android:background="@color/colorPrimary"
                android:text="Puntaje" />

            <ImageButton
                android:id="@+id/bttCerrar"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.16"
                android:background="@color/colorPrimary"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/footer"
            android:orientation="vertical"
            android:layout_below="@+id/linearLayout">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tituloNivel1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nivel 2"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/intentos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tituloIntentos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:layout_marginRight="10dp"
                                android:text="Intentos"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/txtIntentos"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="right"
                                android:text="4"
                                android:textAppearance="?android:attr/textAppearanceLarge" />
                        </LinearLayout>


                    </LinearLayout>
                </TableRow>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mensaje"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textSize="20sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <TableRow
                    android:id="@+id/imagen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/img"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp" />

                </TableRow>

                <TableRow
                    android:id="@+id/palabra"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/word"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:background="#FFFFFFFF"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="10dp" />
                </TableRow>
            </TableLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/letraQ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="Q"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraW"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="W"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraE"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="E"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraR"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="R"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraT"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="T"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraY"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="Y"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraU"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="U"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraI"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="I"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraO"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="O"
                    android:textColor="#000000" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/letraA"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="A"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraS"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="S"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraD"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="D"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraF"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="F"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraG"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="G"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraH"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="H"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraJ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="J"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraK"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="K"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraL"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="L"
                    android:textColor="#000000" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/letraP"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="P"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraEN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="Ã‘"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraZ"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="Z"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraX"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="X"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraC"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="C"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="V"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraB"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="B"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraN"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="Verificar"
                    android:text="N"
                    android:textColor="#000000" />

                <Button
                    android:id="@+id/letraM"
                    android:layout_width="0dp"
